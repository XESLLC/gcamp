<% @comments.each do |comment| %>
  <div class="row">
    <% if comment.user %>
    <%= link_to comment.user.full_name, user_path(comment.user), class: "col-md-3" %>
    <% else %>
    <%= link_to "(deleted user)", project_task_path(@project, @task), class: "col-md-3" %>
    <% end %>
    <div class="col-md-9">
      <%= comment.comment %>
    </div>
  </div>
  <p></p>
  <div class="row">
    <div class="col-md-3">
      <%= time_ago_in_words(comment.updated_at) + " ago" %>
    </div>
  </div>
  <p></p>
  <br>
<% end %>
<br>
<%= form_for [@task, @comment], html: {class: "form-horizontal"} do |f|  %>
  <div class="form-group">
    <div class = "col-md-offset-3 col-md-6">
      <%= f.text_area :comment, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class = "col-md-offset-3 col-md-6">
      <%= f.submit "Add Comment", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
