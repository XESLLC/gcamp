<%= render partial: "shared/errors", locals: {function: @user} %>
<%= form_for @user do |t| %>
  <div class="container">
    <div class="well col-md-offset-3 col-md-6">
      <div class = "form-horizontal">
        <h3 class="page-header">Sign into gCamp</h3>
        <div class = "row">
          <%= t.label :email, :class => "col-md-12 control-label-static" %>
        </div>
        <div class = "form-group">
          <div class="col-md-12">
            <%= t.text_field :email, :class => "form-control" %>
          </div>
        </div>
        <div class = "row">
          <%= t.label :password, :class => "col-md-12 control-label-static" %>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <%= t.text_field :password, :class => "form-control" %>
          </div>
        </div>
          <div class = "form-group">
          <div class="col-md-6">
            <%= submit_tag "Sign In", :class=> "btn btn-default navbar-btn"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
