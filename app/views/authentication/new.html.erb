<%= form_tag signin_path do |t| %>
  <div class="container">
    <div class="well col-md-offset-3 col-md-6">
      <div class = "form-horizontal">
        <h3 class="page-header">Sign into gCamp</h3>
        <div class = "column">
          <% if alert && notice %>
            <p class = "text-danger">
                <%= alert %>
              </p>
          <% end %>
        </div>
        <div class = "row">
          <%= label_tag :email, nil, :class => "col-md-12 control-label-static" %>
        </div>
        <div class = "form-group">
          <div class="col-md-12">
            <%= email_field_tag :email, nil, :class => "form-control" %>
          </div>
        </div>
        <div class = "row">
          <%= label_tag :password, nil, :class => "col-md-12 control-label-static" %>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <%= password_field_tag :password, nil, :class => "form-control" %>
          </div>
        </div>
          <div class = "form-group">
          <div class="col-md-6">
            <%= submit_tag "Sign In", :class=> "btn btn-default navbar-btn"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
