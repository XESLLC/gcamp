<%= render partial: "shared/errors", locals: {function: @user} %>
<%= form_for @user do |t| %>
  <div class="container">
    <div class="well col-md-offset-3 col-md-6">
      <div class = "form-horizontal">
        <h3 class="page-header">Sign up for gCamp!</h3>
        <div class = "row">
          <%= t.label :first_name, "First Name", :class => "col-md-12 control-label-static" %>
        </div>
        <div class = "form-group">
          <div class="col-md-12">
            <%= t.text_field :first_name, :class => "form-control" %>
          </div>
        </div>
        <div class = "row">
          <%= t.label :last_name, "Last Name", :class => "col-md-12 control-label-static" %>
        </div>
        <div class = "form-group">
          <div class="col-md-12">
            <%= t.text_field :last_name, :class => "form-control" %>
          </div>
        </div>
        <div class = "row">
          <%= t.label :email, :class => "col-md-12 control-label-static" %>
        </div>
        <div class = "form-group">
          <div class="col-md-12">
            <%= t.text_field :email, :class => "form-control" %>
          </div>
        </div>
        <div class = "row">
          <%= t.label :password, :class => "col-md-12 control-label-static" %>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <%= t.text_field :password, :class => "form-control" %>
          </div>
        </div>
        <div class = "row">
          <%= t.label :password_confirmation, "Password Confirmation", :class => "col-md-12 control-label-static" %>
        </div>
        <div class="form-group">
          <div class="col-md-12">
            <%= t.text_field :password_confirmation, :class => "form-control" %>
          </div>
        </div>
        <div class = "form-group">
          <div class="col-md-6">
            <%= t.submit "Sign In", :class=> "btn btn-default navbar-btn" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
