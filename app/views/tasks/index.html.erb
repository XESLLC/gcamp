<div class="container">
  <div class="page-header">
    <div class="pull-right">
      <%= link_to "New Task", new_project_task_path, :class=> "btn btn-info" %>
    </div>
    <h1>Tasks for<%= " " + @project.name %></h1>
  </div>

  <ol class="breadcrumb">
    <li> <%= link_to "Projects", projects_path %> </li>
    <li> <%= link_to @project.name, project_path(params[:project_id]) %> </li>
    <li>Tasks</li>
  </ol>

  <table class="table">
    <thead>
      <tr>
        <th><h4>Description</h4></th><th><h4>Due Date</h4></th>
      </tr>
    </thead>
    <tbody>
      <% @project.tasks.each do |task| %>
        <tr>
          <% if task.checkbox %>
            <td style =  "text-decoration: line-through">
              <%= link_to task.description, project_task_path(@project, task[:id]) %>
            </td>
          <% else %>
            <td >
              <%= link_to task.description, project_task_path(@project, task[:id]) %>
            </td>
          <% end %>
          <td >
            <% if task.due_date.class != NilClass %>
            <%= task.due_date.strftime("%m/%d/%Y") %>
            <% else %>
            <% end %>
          </td>
          <td>
            <div class="text-right">
              <%= link_to "Edit", edit_project_task_path(@project,task[:id]), :class=> "btn btn-info" %>
              <%= link_to "Delete", project_task_path(@project, task[:id]), method: :delete, :class=> "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
