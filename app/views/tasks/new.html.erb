<div class="container">
  <div class="page-header">
    <h1>New Task</h1>
  </div>

  <ol class="breadcrumb">
    <li><%= link_to "Tasks", tasks_path %></li>
    <li>New Task</li>
  </ol>
  <%= form_for @task, :html => {:class => "form-horizontal"} do |t| %>
    <div class = "form-group">
      <div class="col-md-1">
        <%= t.label :description %>
      </div>
      <div class="col-md-8">
        <%= t.text_field :description, size: 60 %>
      </div>
    </div>
  <div class = "form-group">
    <div class="col-md-offset-1 col-md-6">
      <%= t.submit :class=> "btn btn-info" %> <%= "   " %><%= link_to "Cancel", tasks_path, :class=> "btn btn-default" %>
    </div>
  </div>
  <% end %>
</div>
