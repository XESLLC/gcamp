<div class="container">
  <% if name_of_view == "new" %>
    <h1 class="page-header">
      New User
    </h1>
  <% elsif name_of_view == "edit" %>
  <% elsif name_of_view == "show" %>
  <h1 class="page-header">
    User
  </h1>
  <% else %>
  <% end %>


  <%= form_for @user do |t| %>

  <% if name_of_view == "show" %>

  <div>
      <%= t.label :first_name, :class => "col-md-2" %>
      <div class="col-md-10">
        <%= t.text_field :first_name, size: 80 %>
      </div>
  </div>

  <div>
    <%= t.label :last_name, :class => "col-md-2" %>
    <div class="col-md-10">
      <%= t.text_field :last_name, size: 80 %>
    </div>
  </div>

  <div>
    <%= t.label :email, :class => "col-md-2" %>
    <div class="col-md-10">
      <%= t.email_field :email, size: 80 %>
    </div>
  </div>

  <% else %>

  <div class = "row">
      <%= t.label :first_name, :class => "col-md-2 control-label" %>
      <div class="col-md-6">
        <%= t.text_field :first_name, :class => "form-control" %>
      </div>
  </div>
<p>

</p>
  <div class = "row">
    <%= t.label :last_name, :class => "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= t.text_field :last_name, size: 80, :class => "form-control" %>
    </div>
  </div>
<p>

</p>
  <div class = "row">
    <%= t.label :email, :class => "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= t.email_field :email, size: 80, :class => "form-control" %>
    </div>
  </div>
<p>
  
</p>

  <div class = "row">
  <div class="col-md-offset-2 col-md-6">
    <%= t.submit :class=> "btn btn-info" %> <%= "   " %> <%= link_to "Cancel",  users_path, :class=> "btn btn-default" %>
  </div>
</div>
<% end %>
<% end %>
</div>
