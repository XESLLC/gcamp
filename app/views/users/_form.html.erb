<div class="container">
  <% if name_of_view == "new" %>
    <h1 class="page-header">
      New User
    </h1>
  <% elsif name_of_view == "edit" %>
  <h1 class="page-header">
    Edit User
  </h1>
  <% elsif name_of_view == "show" %>
  <h1>
    User
    <div class="pull-right">
      <%= link_to "Edit", new_user_path, :class=> "btn btn-info" %>
    </div>
  </h1>
  <% else %>
  <% end %>


  <%= form_for @user do |t| %>

    <% if name_of_view == "show" %>

      <dl class="dl-horizontal">
        <dt><%= t.label :first_name %></dt>
        <dd><%= @user.first_name %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt><%= t.label :last_name %></dt>
        <dd><%= @user.last_name %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt><%= t.label :email %></dt>
        <dd><%= @user.email %></dd>
      </dl>

    <% else %>

  <div class = "row">
      <%= t.label :first_name, :class => "col-md-2 control-label" %>
      <div class="col-md-6">
        <%= t.text_field :first_name, :class => "form-control" %>
      </div>
  </div>

<p>
</p>

  <div class = "row">
    <%= t.label :last_name, :class => "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= t.text_field :last_name, size: 80, :class => "form-control" %>
    </div>
  </div>
<p>
</p>

  <div class = "row">
    <%= t.label :email, :class => "col-md-2 control-label" %>
    <div class="col-md-6">
      <%= t.email_field :email, size: 80, :class => "form-control" %>
    </div>
  </div>
<p>
</p>

  <div class = "row">
  <div class="col-md-offset-2 col-md-6">
    <%= t.submit :class=> "btn btn-info" %> <%= "   " %> <%= link_to "Cancel",  users_path, :class=> "btn btn-default" %>
  </div>
</div>

<p>
</p>

  <div class = "row">
    <div class="col-md-offset-2 col-md-6">
      <% if name_of_view == "edit" %>
        <div class="well">
          <div class="col-md-offset-5">
            <%= link_to "Delete User",  user_path, :class=> "btn btn-danger", method: :delete %>
          </div>
      <% end %>
      </div>
    </div>
  </div>

<% end %>
<% end %>
</div>
