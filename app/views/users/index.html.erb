
<div class="container">
  <div class="page-header">
    <div class="pull-right">
      <%= link_to "New User", new_user_path, :class=> "btn btn-info" %>
    </div>
    <h1>Users</h1>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th><h4>Name</h4></th><th><h4>Email</h4></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
              <%= user.first_name %> <%= " " %> <%= user.last_name %>
            </td>
            <td >
              <%= mail_to user.email, user.email %>
            </td>
          <td>
            <div class="text-right">
              <%= link_to "Edit", edit_user_path(user[:id]), :class=> "btn btn-info" %>
              <%= link_to "Delete", user_path(user[:id]), method: :delete, :class=> "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
